<div class="d-flex flex-row align-items-center">
  <h1 class="mb-0"><%= @currency.name %></h1>
  <%= link_to 'Remove', currency_path(@currency), class: 'btn btn-outline-danger mx-4 my-3', role: 'button', method: :delete %>
</div>
<div class="row mt-3 g-5">
  <div class="col-12 col-lg-6">
    <h2>Purchase</h2>
    <table class="table table-hover">
      <thead>
      <tr>
        <th scope="col">Code</th>
        <th scope="col">Name</th>
        <th scope="col">Rate</th>
        <th scope="col">Source</th>
      </tr>
      </thead>
      <tbody>
      <% @purchase_rates.each do |r| %>
        <tr>
          <th scope="row"><%= link_to r.from.code, currency_path(r.from) %></th>
          <td><%= r.from.name %></td>
          <td><%= r.rate %></td>
          <td><%= r.source %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-12 col-lg-6">
    <h2>Sale</h2>
    <table class="table table-hover">
      <thead>
      <tr>
        <th scope="col">Code</th>
        <th scope="col">Name</th>
        <th scope="col">Rate</th>
        <th scope="col">Source</th>
      </tr>
      </thead>
      <tbody>
      <% @selling_rates.each do |r| %>
        <tr>
          <th scope="row"><%= link_to r.to.code, currency_path(r.to) %></th>
          <td><%= r.to.name %></td>
          <td><%= r.rate %></td>
          <td><%= r.source %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
