<div class="row">
  <div class="col-12 col-lg-4">
    <h2 class="mb-4">Selected currencies</h2>
    <div class="border rounded overflow-hidden">
      <% if @currencies.present? %>
      <table class="table table-hover m-0">
        <thead>
          <tr>
            <th scope="col">Code</th>
            <th scope="col">Name</th>
          </tr>
        </thead>
        <tbody>
          <% @currencies.each do |c| %>
          <tr>
            <th scope="row"><%= link_to c.code, currency_path(c) %></th>
            <td><%= c.name %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <% else %>
        <p class="m-3">List is empty</p>
      <% end %>
    </div>
    <%= link_to 'Add', new_currency_path, class: 'btn btn-primary my-4', role: 'button' %>
  </div>
</div>
