<div class="row">
  <div class="col-12 col-lg-4">
    <h1 class="mb-4">Accounts</h1>
    <div class="border rounded overflow-hidden">
      <% if @accounts.present? %>
        <table class="table table-hover m-0">
          <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Balance</th>
            <th scope="col">Currency</th>
          </tr>
          </thead>
          <tbody>
          <% @accounts.each do |a| %>
            <tr>
              <th scope="row"><%= link_to a.name, account_path(a) %></th>
              <td><%= a.amount %></td>
              <td><%= a.currency.code %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      <% else %>
        <p class="m-3">List is empty</p>
      <% end %>
    </div>
    <%= link_to 'Add', new_account_path, class: 'btn btn-primary my-4', role: 'button' %>
  </div>
</div>